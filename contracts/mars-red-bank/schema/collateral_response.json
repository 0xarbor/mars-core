{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CollateralResponse",
  "type": "object",
  "required": [
    "collateral"
  ],
  "properties": {
    "collateral": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/CollateralInfo"
      }
    }
  },
  "definitions": {
    "CollateralInfo": {
      "type": "object",
      "required": [
        "denom",
        "enabled"
      ],
      "properties": {
        "denom": {
          "description": "Asset denom",
          "type": "string"
        },
        "enabled": {
          "description": "Wether the user is using asset as collateral or not",
          "type": "boolean"
        }
      }
    }
  }
}
